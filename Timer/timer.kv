<CustButton@Button>
    font_size: 18
    color: 0.5, 0.5, 0.7, 1

<Menu>
    rows: 2
    padding: 10
    spacing: 10

    BoxLayout:
        spacing: 10
        padding: 5

        TextInput:
            id: timer
            font_size: 80
            padding_x:
                [self.center[0] - self._get_text_width(max(self._lines, key=len), self.tab_width,
                self._label_cached) / 2.0, 0] if self.text else [self.center[0], 0]

            padding_y:
                [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

        GridLayout:
            rows: 2
            spacing: 10

            CustButton:
                text: 'START!'
                font_size: 80
                on_press: root.timer(timer.text)

            CustButton:
                text: 'STOP!'
                font_size: 80
                on_press: root.stop_timer()

    BoxLayout:
        spacing: 10
        padding: 5
        CustButton:
            text: 'Parzenie herbaty'
            on_press: root.set_value('120')
        CustButton:
            text: 'Zadanie z Pythona'
            on_press: root.set_value('15')
        CustButton:
            text: 'Włączenie komputera'
            on_press: root.set_value('5')
        CustButton:
            text: 'Sprzątanie pokoju'
            on_press: root.set_value('10')

