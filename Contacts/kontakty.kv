            CustButton:
                text: 'Dodaj/Edytuj Kontakt'
                on_press: root.dodaj_kontakt(osoba.text, telefon.text, email.text)

            BoxLayout:
                Label:
                    text: 'Nazwa:'
                TextInput:
                    id: osoba
            BoxLayout:
                Label:
                    text: 'Telefon:'
                TextInput:
                    id: telefon
            BoxLayout:
                Label:
                    text: 'Email:'
                TextInput:
                    id: email

        GridLayout:
            rows: 4

